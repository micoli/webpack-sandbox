{
	"compilerOptions": {
		"outDir": "build",
		"target": "ES2015",
		"module": "CommonJS",
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": [
		  "node_modules/@types"
		],
		"lib": [
		  "es2015",
		  "DOM"
		],
		"noImplicitAny": false,
		"alwaysStrict": true,
		"experimentalDecorators": true
	},
	"include": [
		"app/**/**.ts"
	],
	"exclude": [
		"node_modules"
	]
}
